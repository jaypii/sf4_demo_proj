{% extends 'base.html.twig' %}

{% block title %}Product-List{% endblock %}

{% block body %}
    <h1>Product List</h1>
    <p>Manage Products ({{ pagination.getTotalItemCount }})</p>
    <div class="card mt-2">
    <div class="card-body">
    <a class="btn btn-primary" href="{{ path('product_new') }}"> + </a>
    <table class="table table-striped mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for product in pagination %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td> $ {{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}"><span class="oi oi-grid-two-up"></span>&nbsp;</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}"><span class="oi oi-pencil"></span>&nbsp;</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    <div class="alert alert-info" role="alert">no records found!</div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
    </div>
    </div>
{% endblock %}
