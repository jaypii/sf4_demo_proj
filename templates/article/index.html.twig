{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <a href="{{ path('article_new') }}"><span class="oi oi-medical-cross"></span> Create</a>
                </th>
                <th>Title</th>
                <th>Content</th>
                <th>Tags</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><img src="../../{{ article.imgURL }}" width="20px"/></td>
                <td>{{ article.title }}</td>
                
                <td>{{ article.atext }}</td>
                <td>{{ article.tags ? article.tags|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}"><span class="oi oi-grid-two-up"></span>&nbsp;</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}"><span class="oi oi-pencil"></span>&nbsp;</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 
{% endblock %}
