{% extends 'base.html.twig' %}

{% block title %}TestEnt{% endblock %}

{% block body %}
    <h1>Show User</h1>
    <div class="d-flex flex-row bd-highlight mb-2">
        <div class="p-1 bd-highlight">
            <a href="{{ path('test_ent_index') }}" class="btn btn-primary btn-sm" role="button">
                <span class="oi oi-list" title="Back to List" aria-hidden="true"></span>
            </a>   
        </div>
        <div class="p-1 bd-highlight">
            <a href="{{ path('test_ent_edit', {'id': test_ent.id}) }}" class="btn btn-success btn-sm" role="button">
                <span class="oi oi-pencil" title="Edit" aria-hidden="true"></span>
            </a>    
        </div>
        <div class="p-1 bd-highlight">
            {{ include('test_ent/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card mt-2 p-2">
                <table class="table table-striped mt-2">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ test_ent.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ test_ent.name }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ test_ent.email }}</td>
                        </tr>
                        <tr>
                            <th>Message</th>
                            <td>{{ test_ent.message }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col">&nbsp;</div>
    </div>
    {# include('test_ent/_delete_form.html.twig') #}
{% endblock %}
