{% extends 'base.html.twig' %}

{% block title %}TestEnt{% endblock %}

{% block body %}
    <h1>Test CRUD Show</h1>
    <div class="card mt-2 p-2">
        <a href="{{ path('test_ent_index') }}" class="btn btn-primary w-25" role="button">Back to list</a>
        <table class="table table-striped mt-2">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ test_ent.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ test_ent.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ test_ent.email }}</td>
                </tr>
                <tr>
                    <th>Message</th>
                    <td>{{ test_ent.message }}</td>
                </tr>
            </tbody>
        </table>
        <a href="{{ path('test_ent_edit', {'id': test_ent.id}) }}" class="btn btn-success w-25" role="button">Edit</a>
